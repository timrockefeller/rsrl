{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rsrl'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rsrl",
                    "--package=rsrl",
                    "--features=debug"
                ],
                "filter": {
                    "name": "rsrl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "PATH": "${env:USERPROFILE}/.rustup/toolchains/stable-x86_64-pc-windows-msvc/bin;${workspaceFolder}/target/debug/deps;${env:PATH}",
            },
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rsrl'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rsrl",
                    "--package=rsrl"
                ],
                "filter": {
                    "name": "rsrl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}